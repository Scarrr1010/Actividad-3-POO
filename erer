import tkinter as tk
from tkinter import ttk, messagebox
import math

class Triangulo:
    def __init__(self, LadoA):
        self.LadoA = LadoA

    def Perimetro(self):
        return self.LadoA * 3

    def altura(self):
        return math.sqrt((math.pow(self.LadoA, 2) - math.pow((self.LadoA / 2), 2)))

    def area(self):
        altura = self.altura()
        return (self.LadoA * altura) / 2

def calcular_triangulo():
    try:
        lado_a = float(lado_entry.get())
        triangulo = Triangulo(lado_a)

        perimetro = triangulo.Perimetro()
        altura = triangulo.altura()
        area = triangulo.area()

        resultados_text.set(f"Perímetro: {perimetro:.2f}\nAltura: {altura:.2f}\nÁrea: {area:.2f}")
    except ValueError:
        messagebox.showerror("Error", "Por favor, ingrese un valor numérico válido para el lado.")

# Crear la ventana principal
root = tk.Tk()
root.title("Cálculo de Triángulo Equilátero")
root.geometry("400x300")

# Variables de texto para los resultados
resultados_text = tk.StringVar()

# Etiquetas y campos de entrada
lado_label = ttk.Label(root, text="Ingrese el lado del triángulo (equilátero):")
lado_label.pack(pady=5)
lado_entry = ttk.Entry(root)
lado_entry.pack(pady=5)

# Botón para calcular
calcular_button = ttk.Button(root, text="Calcular", command=calcular_triangulo)
calcular_button.pack(pady=20)

# Etiqueta para mostrar resultados
resultados_label = ttk.Label(root, textvariable=resultados_text, justify="left")
resultados_label.pack(pady=10)

# Ejecutar el bucle principal de la ventana
root.mainloop()